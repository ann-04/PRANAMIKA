<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Minister 1 -->
        <LinearLayout
            android:id="@+id/minister1Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:background="?android:attr/selectableItemBackground"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/minister1ImageView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/man"
                android:layout_marginRight="16dp"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/minister1NameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shri Rajnath Singh"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/minister1DesignationTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Defence Minister (RM)"
                    android:textColor="@color/primary"
                    android:textSize="14sp"
                    android:textStyle="bold|italic" />

                <!-- Buttons for Profile and Review -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <Button
                        android:id="@+id/minister1ProfileButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View Profile" />

                    <Button
                        android:id="@+id/minister1ReviewButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Review"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
